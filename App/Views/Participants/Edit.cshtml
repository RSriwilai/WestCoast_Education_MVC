@model App.ViewModels.EditParticipantViewModel


@*Steg 4. SKAPA ETT FORMULÄR*@
<form asp-controller="Participants" asp-action="Edit" method="POST">
    <div class="card">
        <div class="card-header">
            <h4>Ändra</h4>
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="EmailAddress"></label>
                <input class="form-control" asp-for="EmailAddress">
                <span asp-validation-for="EmailAddress"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input class="form-control" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Address"></label>
                <input class="form-control" asp-for="Address">
                <span asp-validation-for="Address"></span>
            </div>
            <button id="save"type="submit" class="btn btn-primary">Spara</button>
        </div>
    </div>
</form>