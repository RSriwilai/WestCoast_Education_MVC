@model App.ViewModels.EditCourseViewModel

@Html.ValidationSummary();
@*Steg 4. SKAPA ETT FORMULÄR*@
<form asp-controller="Courses" asp-action="Edit" method="POST">
    <div class="card">
        <div class="card-header">
            <h4>Ändra </h4>
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label" asp-for="CourseComplexity"></label>
                <input class="form-control" asp-for="CourseComplexity">
                <span asp-validation-for="CourseComplexity"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="CourseStatus"></label>
                <input class="form-control" asp-for="CourseStatus">
                <span asp-validation-for="CourseStatus"></span>
            </div>
            <button id="save"type="submit" class="btn btn-primary">Spara</button>
        </div>
    </div>
</form>